<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <Button
        android:layout_width="110dp"
        android:layout_height="160dp"
        android:text="Left Click"
        android:id="@+id/leftClk" />

    <Button
        android:layout_width="110dp"
        android:layout_height="160dp"
        android:text="Right Click"
        android:id="@+id/rightClk"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/keyboardBtn"
        android:src="@drawable/keyboard"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ToggleButton
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textOff="Mouse Enabled"
        android:textOn="Mouse Locked"
        android:id="@+id/lockMouseBtn"
        android:layout_alignBottom="@+id/leftClk"
        android:layout_centerHorizontal="true" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/shiftToggleBtn"
        android:layout_below="@+id/lockMouseBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/leftClk"
        android:layout_alignEnd="@+id/leftClk"
        android:textOff="Shift Off"
        android:textOn="Shift On" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/altBtn"
        android:layout_alignBottom="@+id/shiftToggleBtn"
        android:layout_centerHorizontal="true"
        android:textOff="Alt Off"
        android:textOn="Alt On" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/ctrlBtn"
        android:layout_below="@+id/lockMouseBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/rightClk"
        android:layout_alignStart="@+id/rightClk"
        android:textOn="Ctrl On"
        android:textOff="Ctrl Off" />

</RelativeLayout>
